{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/main.py"
        },
        {
            "source": "/webhook/shopify",
            "destination": "/api/main.py"
        },
        {
            "source": "/stats",
            "destination": "/api/main.py"
        },
        {
            "source": "/orders(.*)",
            "destination": "/api/main.py"
        },
        {
            "source": "/health",
            "destination": "/api/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}